{
  "typography": {
    "fontRatio": {
      "value": "1.125",
      "comment": "Typography scale ratio - https://type-scale.com/"
    },
    "fontSizes": {
      "root": {
        "value": "87.5%",
        "comment": "Set as default `html` font-size in your CSS"
      },
      "base": {
        "value": "1rem",
        "comment": "14px"
      },
      "xxs": {
        "value": "calc({typography.fontSizes.xs.value} / {typography.fontRatio.value})"
      },
      "xs": {
        "value": "calc({typography.fontSizes.sm.value} / {typography.fontRatio.value})"
      },
      "sm": {
        "value": "calc({typography.fontSizes.base.value} * {typography.fontRatio.value})"
      },
      "md": {
        "value": "calc({typography.fontSizes.sm.value} * {typography.fontRatio.value})"
      },
      "lg": {
        "value": "calc({typography.fontSizes.md.value} * {typography.fontRatio.value})"
      },
      "xl": {
        "value": "calc({typography.fontSizes.lg.value} * {typography.fontRatio.value})"
      },
      "xxl": {
        "value": "calc({typography.fontSizes.xl.value} * {typography.fontRatio.value})"
      },
      "huge": {
        "value": "calc(({typography.fontSizes.xxl.value} * 1.5) * {typography.fontRatio.value})"
      }
    }
  }
}
