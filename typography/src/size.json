{
  "typography": {
    "fontSize": {
      "ratio": {
        "value": "1.125",
        "comment": "Typography scale ratio - https://type-scale.com/"
      },
      "root": {
        "value": "87.5%",
        "comment": "Set as default `html` font-size in your CSS"
      },
      "base": {
        "value": "1rem",
        "comment": "14px"
      },
      "xxs": {
        "value": "calc(var({typography.fontSize.xs.value}) / var({typography.fontSize.ratio.value}))"
      },
      "xs": {
        "value": "calc(var({typography.fontSize.sm.value}) / var({typography.fontSize.ratio.value}))"
      },
      "sm": {
        "value": "calc(var({typography.fontSize.base.value}) * var({typography.fontSize.ratio.value}))"
      },
      "md": {
        "value": "calc(var({typography.fontSize.sm.value}) * var({typography.fontSize.ratio.value}))"
      },
      "lg": {
        "value": "calc(var({typography.fontSize.md.value}) * var({typography.fontSize.ratio.value}))"
      },
      "xl": {
        "value": "calc(var({typography.fontSize.lg.value}) * var({typography.fontSize.ratio.value}))"
      },
      "xxl": {
        "value": "calc(var({typography.fontSize.xl.value}) * var({typography.fontSize.ratio.value}))"
      },
      "huge": {
        "value": "calc(var({typography.fontSize.xxl.value}) * 2 * var({typography.fontSize.ratio.value}))"
      }
    }
  }
}
